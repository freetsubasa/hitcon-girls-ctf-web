<div class="panel panel-info">
	<div class="panel-heading">
		<div class="panel-title">
			<h1><%= @problem.title %> [<%= @problem.point %>]</h1>
		</div>
	</div>
	<div class="panel-body">
		<div>
			<h2>Description</h2>
		</div>
		<p><%= markdown(@problem.description) %></p>
	</div>
	<div class="panel-body">
		<div>
			<h2>Hint</h2>
		</div>
		<p><%= markdown(@problem.hint) %></p>
	</div>
	<hr>
	<div class="panel-body">
		<%= form_tag({ controller: "submissions", action: "submit"}, method: "post", class: "form-inline", role: "form") do %>
			<div class="form-group">
				<%= hidden_field_tag :problem_id, @problem.id, class: "form-control" %>
				<%= text_field_tag :flag, nil, size: "100%", class: "form-control", placeholder: "FLAG{........}" %>
				<%= submit_tag "Submit", class: "btn btn-success" %>
			</div>
		<% end %>
	</div>
</div>
<hr>
<%= render 'shared/submission' %>
